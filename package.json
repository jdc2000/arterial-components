{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@material/button": "^4.0.0",
    "@material/list": "^4.0.0",
    "@material/textfield": "^4.0.0",
    "@storybook/react": "^5.3.9",
    "@testing-library/react": "^9.4.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.2",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "scripts": {
    "clean": "npm run clean-root && npm run clean-pkgs",
    "clean-pkgs": "lerna clean -y && lerna exec --parallel -- rm -rf ./package-lock.json",
    "clean-root": "rm -rf ./node_modules ./package-lock.json",
    "postinstall": "lerna bootstrap",
    "storybook": "start-storybook",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
