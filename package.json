  },
  "scripts": {
    "build": "rollup -c",
    "clean": "run-s clean:pkgs clean:root",
    "clean:dist": "lerna exec --parallel -- rm -rf ./dist",
    "clean:lock": "lerna exec --parallel -- rm -rf ./package-lock.json",
    "clean:node": "lerna exec --parallel -- rm -rf ./node_modules",
    "clean:pkgs": "run-p clean:dist clean:node clean:lock",
    "clean:root": "rm -rf ./node_modules ./package-lock.json",
    "postinstall": "lerna bootstrap",
    "publish": "lerna publish --force-publish",
    "release": "run-s build publish",
    "storybook": "run-s clean:dist storybook:start",
    "storybook:start": "start-storybook -p 9001",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
